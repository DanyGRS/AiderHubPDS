@{ 
    Layout = "_LayoutLogin";
}
<head>
    
    <link rel="stylesheet" href="~/css/StyleBranco.css" />
</head>
    <body>
        <div class="header">
            <div class="text-center">
                @*<h1>Cadastre-se</h1>*@
                <h1 style="color: #1b3061">Escolha seu perfil: </h1>
                <hr />
            </div>
        </div>

        <div class="d-flex justify-content-center text-center">
            <div class="col-md-6">
                <a asp-area="" asp-controller="Ongs" asp-action="Create" class="card-link text-white">
                    <div class="card border-white" style="width: 20rem; background-color: #FF7E0D;">
                        <img src="~/ong3.png" class="card-img-top" alt="...">
                        <div class="card-body">
                            <h4 class="card-text">ONG</h4>
                            <p>
                                Se você possui uma ONG, escolha essa opção!
                            </p>
                            <br />
                            <p>
                                Aqui você pode cadastrar seu projeto social.
                            </p>
                        </div>
                    </div>
                </a>
            </div>
            <div class="">
                <a asp-area="" asp-controller="Voluntarios" asp-action="Create" class="card-link text-white">
                    <div class="card border-white" style="width: 20rem; background-color: #1b3061;">
                        <img src="~/voluntarios1.jpeg" class="card-img-top" alt="...">
                        <div class="card-body">
                            <h4 class="card-text">Voluntário</h4>
                            <p>
                                Se você quer ser voluntário, escolha essa opção!
                            </p>
                            <br />
                            <p>
                                Aqui você pode cadastrar seu perfil e se voluntariar aos eventos.
                            </p>
                        </div>
                    </div>
                </a>
            </div>
        </div>
    </body>
    <style>
        .card-img-top {
            width: 100%; /* Garante que a imagem preencha todo o espaço do card */
            height: 12rem;
            max-height: 100%; /* Evita que a imagem saia do card */
            filter: blur(2px);  /*Aplica um desfoque inicial */
            transition: filter 0.3s ease;  /*Transição suave para o efeito de desfoque*/ 
        }
        /*/* Efeito de hover */
        .card:hover {
            filter: blur(0); /* Remove o desfoque quando o mouse passa por cima */
            transform: scale(1.02); /* Aplica um leve zoom */
            transition: filter 0.3s ease, transform 0.3s ease; /* Transições suaves para os efeitos */
        }

        /* Restante dos estilos */
        .header h1 {
            color: white;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            font-size: 40px;
            font-weight: bold;
        }

        .header p {
            color: white;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            font-size: 30px;
            font-weight: bold;
        }

        .header hr {
            color: #FF7E0D;
            height: 3px;
            background-color: #FF7E0D;
            border: none;
            margin-top: 10px;
            margin-bottom: 20px;
        }
    </style>
